#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run comprehensive checks before push
echo "🔍 Running pre-push checks..."

# Type checking
echo "🔧 Checking TypeScript types..."
npm run type-check

# Linting
echo "🧹 Running ESLint..."
npm run lint

# Format checking
echo "✨ Checking code formatting..."
npm run format:check

echo "✅ All pre-push checks passed!"
