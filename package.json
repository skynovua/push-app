{
  "name": "push-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "precommit": "npm run lint:staged && npm run type-check",
    "prepare": "husky",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "test:unit": "echo 'No tests configured yet'"
